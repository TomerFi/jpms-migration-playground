# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[**.java]
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

[**.{xml,fxml}]
indent_style = space
indent_size = 2
end_of_line = lf
max_line_length = 120
trim_trailing_whitespace = true
